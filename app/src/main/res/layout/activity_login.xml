<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:background="@color/white">

    <ImageView
        android:scaleType="fitXY"
        android:src="@mipmap/login_bg"
        android:layout_width="match_parent"
        android:layout_height="132dp"/>

    <TextView
        android:textStyle="bold"
        android:textColor="#A666F6"
        android:textSize="22sp"
        android:text="XCITE"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="50dp"
        android:layout_marginRight="20dp"
        android:gravity="center"
        android:text="赛季活动空间拉屎的卡拉时间段啊三打哈深刻理解的卡了"
        android:textColor="@color/black"
        android:textSize="18sp" />

    <EditText
        android:hint="Username"
        android:background="@drawable/login_edittext_bg"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="50dp"
        android:paddingLeft="25dp"
        android:paddingRight="25dp"
        android:singleLine="true"
        android:ellipsize="end"
        android:layout_width="match_parent"
        android:layout_height="50dp"/>

    <EditText
        android:hint="Password"
        android:background="@drawable/login_edittext_bg"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:paddingLeft="25dp"
        android:paddingRight="25dp"
        android:singleLine="true"
        android:ellipsize="end"
        android:layout_width="match_parent"
        android:layout_height="50dp"/>
    
    <LinearLayout
        android:id="@+id/login_btn"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="@drawable/login_btn_bg"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <ImageView
            android:src="@mipmap/baseline_lock_open_white_36dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        
        <TextView
            android:layout_marginLeft="6dp"
            android:textColor="@color/white"
             android:text="SIGN IN"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    <TextView
        android:layout_marginTop="20dp"
        android:layout_marginLeft="6dp"
        android:textColor="@android:color/darker_gray"
        android:text="Forget Password？"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_marginTop="20dp"
        android:layout_marginLeft="6dp"
        android:textColor="@android:color/black"
        android:text="OR"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:id="@+id/register_btn"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="@drawable/login_facebook_bg"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <ImageView
            android:src="@mipmap/baseline_facebook_white_36dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_marginLeft="6dp"
            android:textColor="@color/white"
            android:text="Login with facebook"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    <LinearLayout
        android:gravity="bottom"
        android:layout_marginTop="12dp"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:includeFontPadding="false"
            android:text="Don't have account yet?"
            android:textSize="12sp" />

        <TextView
            android:textColor="#6F72F7"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:includeFontPadding="false"
            android:text="Sign up now"
            android:textSize="16sp" />

    </LinearLayout>

</LinearLayout>